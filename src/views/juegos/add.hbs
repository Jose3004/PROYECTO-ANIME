
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase"> Please insert PlayStation CD-ROM</h3>
                </div>
                <div class="card-body">
                    <form action="/add" method="post" enctype="multipart/form-data">

                        <div class="input-group mt-2">
                            <label for="game" class="input-group-text"> Videojuego </label>
                            <input class="form-control" type="text" name="game" id="game" placeholder=" God of war" autofocus required >
                        </div>

                        <div class="input-group mt-2">
                            <label for="console" class="input-group-text"> Consola </label>
                            <input class="form-control" type="text" name="console" id="console" placeholder=" PS1,PS4"  required >
                        </div>

                        <div class="input-group mt-2">
                            <label for="release_date" class="input-group-text"> Año Lanzamiento </label>
                            <input class="form-control" type="number" name="release_date" id="release_date" placeholder="90s,2000s,2010s" required >
                        </div>

                        <div class="input-group mt-2">
                            <label for="publisher" class="input-group-text"> Distribuidora </label>
                            <input class="form-control" type="text" name="publisher" id="publisher" placeholder="Activision , EA" required >
                        </div>

                         <div class="input-group mt-2">
                            <label for="pegi_info" class="input-group-text"> Clasificación PEGI </label>
                            <input class="form-control" type="text" name="pegi_info" id="pegi_info" placeholder="Ejemplo: PEGI 16"  required >
                        </div>

                        <div class="input-group mt-2">
                            <input class="form-control" type="file" name="file" id="file">
                        </div>

                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success"> Disfruta tu juego </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
