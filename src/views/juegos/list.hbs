
<div class="container">
    <div class="row mt-5">
        <h3 class="text-center text-uppercase p-2"> Catalogo de juegos para consolas sony PS</h3>

        {{#if juegos}}

            <table class="table text-center">
                <thead>
                    <tr class="table-dark">
                        <th scope="col" class="col-4"> Videojuego  </th>
                        <th scope="col"> Consola   </th>
                        <th scope="col"> Distribuidor       </th>
                        <th scope="col"> fechaLanzamiento  </th>
                        <th scope="col"> pegiInfo  </th>
                        <th scope="col"> Imagen  </th>
                        <th scope="col"> Acciones   </th>
                    </tr>
                </thead>
                <tbody>
                    
                    {{#each juegos}}
                        <tr>
                            <td> {{game}} </td>
                            <td> {{console}} </td>
                            <td> {{publisher}} </td>
                            <td> {{release_date}} </td>
                            <td> {{pegi_info}} </td>
                            <td>
                                <img src="/uploads/{{imagen}}" class="card-img-top mx-auto m-2 rounded-circle" style="width: 150px; height: 150px;display:block;">
                            </td>
                            <td> 
                                <div class="btn-group">
                                    <a href="/edit/{{id}}" class="btn btn-warning p-2">
                                        <i class="fa-solid fa-pencil"></i>
                                    </a>
                                    <a href="/delete/{{id}}" class="btn btn-danger p-2">
                                        <i class="fa-solid fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    {{/each}}

                </tbody>
            </table>

        {{else}}

            <div class="card text-center mx-auto">
                <div class="card-header">
                    <h3> Debes crear una persona</h3>
                </div>
                <div class="card-body">
                    <p>Presiona este boton para que puedas registrar a una persona en la aplicacion</p>
                    <a href="/add" class="btn btn-primary"> Ir a crear</a>
                </div>
            </div>

        {{/if}}

    </div>
</div>
