
<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase"> Personaliza tu juego </h3>
                </div>
                <div class="card-body">
                    <form action="/edit/{{juego.id}}" method="post"  enctype="multipart/form-data">

                        <div class="input-group mt-2">
                            <label for="game" class="input-group-text"> Videojuego </label>
                            <input class="form-control" type="text" name="game" id="game" placeholder="Ejemplo: GTA San Andreas" value="{{juego.game}}" autofocus required >
                        </div>

                        <div class="input-group mt-2">
                            <label for="console" class="input-group-text"> Consola </label>
                            <input class="form-control" type="text" name="console" id="console" placeholder="Ejemplo: PS2" value="{{juego.console}}" required >
                        </div>

                        <div class="input-group mt-2">
                            <label for="release_date" class="input-group-text"> Año Lanzamiento </label>
                            <input class="form-control" type="text" name="release_date" id="release_date" placeholder="2000s" value="{{juego.release_date}}" required >
                        </div>

                        <div class="input-group mt-2">
                            <label for="publisher" class="input-group-text"> Distribuidora </label>
                            <input class="form-control" type="text" name="observacion" id="observacion" value="{{juego.publisher}}" placeholder="Escriba una observacion" required >
                        </div>

                         <div class="input-group mt-2">
                            <label for="publisher" class="input-group-text"> Clasificación </label>
                            <input class="form-control" type="text" name="pegi_info" id="pegi_info" value="{{juego.pegi_info}}" placeholder="PEGI 16" required >
                        </div>

                        <div class="input-group mt-2">
                            <input class="form-control" type="file" name="file" id="file">
                        </div>

                        {{#if juego.imagen}}
                            <div class="input-group mt-2">
                                <img src="/uploads/{{juego.imagen}}" class="card-img-top mx-auto m-2 rounded-circle" style="width: 150px; height: 150px;display:block;">
                            </div>
                        {{/if}}

                        <div class="form-group mt-4 d-grid gap-2">
                            <button class="btn btn-success"> Actualizar </button>
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
